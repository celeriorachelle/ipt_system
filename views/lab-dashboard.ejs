<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lab Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">
  <h1 class="mb-4">Lab Availability Dashboard</h1>

  <!-- Navigation Menu -->
  <nav>
    <ul class="nav">
        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
        <li class="nav-item"><a href="/lab" class="nav-link">Lab</a></li>
        <li class="nav-item"><a href="/admin" class="nav-link">Admin</a></li>
        <!-- Admin button to directly access lab dashboard -->
        <li class="nav-item">
          <a href="/admin/lab-dashboard" class="btn btn-primary nav-link">View Lab Dashboard</a>
        <form action="/lab/logout" method="POST" class="d-inline-block">
            <button type="submit" class="btn btn-danger">Log Out</button>
        </form>
        <!-- Admin button to directly access lab dashboard -->
    </ul>
  </nav>

  <!-- Lab Availability -->
  <h3 class="mt-5 mb-3">Available Labs</h3>
  <% if (labStatus && labStatus.length > 0) { %>
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>Lab</th>
          <th>Availability</th>
          <th>Subject</th>
          <th>Schedule</th>
          <th>Faculty</th>
        </tr>
      </thead>
      <tbody>
        <% labStatus.forEach(lab => { %>
          <tr>
            <td><%= lab.lab_name %></td>
            <td>
              <%= lab.available ? "Available" : "Not Available" %>
            </td>
            <td><%= lab.subject || "No Subject" %></td>
            <td><%= lab.schedule || "No Schedule" %></td>
            <td><%= lab.faculty || "No Faculty Assigned" %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No lab availability data found.</p>
  <% } %>

</body>
</html>
