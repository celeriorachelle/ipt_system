<!DOCTYPE html>
<html>
<head>
  <title>Admin Password</title>
  <link rel="stylesheet" href="/stylesheets/admin-password.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <nav>
    <ul class="nav">
      <li class="nav-item">
        <a href="/" class="nav-link">
          <i class="bi bi-house-fill"></i>
        </a>
      </li>
    </ul>
  </nav>

  <main>
    <h2>Admin Access Required</h2>
    <form id="adminForm" action="/admin-password/*" method="POST">
      <label for="adminPassword">Enter Admin Password :</label>
      <input type="password" name="adminPassword" id="adminPassword" required />
      <button type="submit">Continue</button>
    </form>

    <% if (typeof alert !== 'undefined') { %>
      <p style="color: red;"><%= alert %></p>
    <% } %>
  </main>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', () => {
          console.log('Form is being submitted!');
        });
      } else {
        console.log('Form not found in DOM.');
      }
    });
  </script>
  
</body>
</html>
